- provide :title, t('views.diagnosis_logs.show.title')

p
  a.btn.btn-default href="#{edit_diagnosis_log_path(@diagnosis_log)}" #{t('helpers.links.edit')}

table.table
  colgroup
    col.col-xs-2
    col.col-xs-10
  tbody
    tr
      th #{t('activerecord.attributes.diagnosis_log.layer')}
      td #{@diagnosis_log.layer_label}
    tr
      th #{t('activerecord.attributes.diagnosis_log.log_group')}
      td #{@diagnosis_log.log_group}
    tr
      th #{t('activerecord.attributes.diagnosis_log.log_type')}
      td #{@diagnosis_log.log_type}
    tr
      th #{t('activerecord.attributes.diagnosis_log.log_campaign_uuid')}
      td
        - unless @diagnosis_log.log_campaign.nil?
          a href="#{log_campaign_path(@diagnosis_log.log_campaign)}"
            | #{@diagnosis_log.log_campaign_uuid}
    tr
      th #{t('activerecord.attributes.diagnosis_log.result')}
      td #{@diagnosis_log.result}
    tr
      th #{t('activerecord.attributes.diagnosis_log.detail')}
      td #{hbr(@diagnosis_log.detail)}
    tr
      th #{t('activerecord.attributes.diagnosis_log.occurred_at')}
      td #{datetime_view(@diagnosis_log.occurred_at)}
